<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Solicitar_Permiso">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:background="@drawable/panelfondo"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txt245677"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Solicitar permiso de venta"
            android:textSize="32dp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.504"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vectorpanel">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView166"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Cual es su NRC?"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtNRC"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:background="@drawable/bordett"
                    android:ems="10"
                    android:hint="NRC"
                    android:inputType="text"


                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/textView12618"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Cual es el nombre de la empresa?"
                    android:textAlignment="center"
                    android:textSize="20sp"

                    android:textStyle="bold"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtEmpresa"
                    android:layout_width="277dp"
                    android:layout_height="53dp"
                    android:background="@drawable/bordett"
                    android:ems="10"
                    android:hint="Empresa"
                    android:inputType="text"


                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/textView1061"
                    android:layout_width="367dp"
                    android:layout_height="wrap_content"
                    android:text="¿A que se enfoca su emprendimiento?"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtEnfoque"
                    android:layout_width="277dp"
                    android:layout_height="53dp"
                    android:ems="10"
                    android:inputType="text"
                    android:background="@drawable/bordett"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:hint="Enfoque del emprendimiento"


                    android:textSize="20sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/textView1617556"
                    android:layout_width="357dp"
                    android:layout_height="wrap_content"
                    android:text="Descripción sobre el emprendimiento"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtDescripcionSP"
                    android:layout_width="277dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bordett"
                    android:ems="10"
                    android:hint="Descripción"
                    android:inputType="text"
                    android:textColor="@color/design_default_color_primary_dark"


                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSolicitar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginEnd="75dp"
                    android:layout_weight="1"

                    android:text="Guardar cambios" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
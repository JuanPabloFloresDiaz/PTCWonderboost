<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/card_background">

    <ImageView
        android:id="@+id/imgFotoNegociaciones"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bordett"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/idNegociacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#555555"
            android:textColorHint="#555555"
            android:hint="id"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txtNombreProductoServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="Nombre"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/VendedorNego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="root"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/PrecioOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="$0.00"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/PrecioOfrecido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFF4A"
            android:textColorHint="#FFFF4A"
            android:hint="$0.00"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/PrecioVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFE800"
            android:textColorHint="#FFE800"
            android:hint="$0.00"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</LinearLayout>
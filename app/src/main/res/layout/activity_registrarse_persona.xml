<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarsePersona">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                app:srcCompat="@drawable/imgregistro"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="53dp"
                android:text="Registra tus datos"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- ScrollView original (vertical) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Agrega más vistas aquí si es necesario -->

            </LinearLayout>

            <!-- ScrollView horizontal (dentro del ScrollView original) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Nombres: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtNombres"
                        android:layout_width="279dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:ems="10"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- ScrollView horizontal (dentro del ScrollView original) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apellidos"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Apellidos: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtApellidos"
                        android:layout_width="279dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:ems="10"
                        android:hint="Apellido"
                        android:inputType="textPersonName"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>
            </HorizontalScrollView>
            <!-- ScrollView horizontal (dentro del ScrollView original) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/correo"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Correo: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtCorreo"
                        android:layout_width="301dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:ems="10"
                        android:hint="correo@gmail.com"
                        android:inputType="textPersonName"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- ScrollView horizontal (dentro del ScrollView original) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/generos"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Generos: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerGenero"
                        android:layout_width="279dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Nacimiento: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtFecha"
                        android:layout_width="279dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Seleccionar fecha"
                        android:inputType="none"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/direccion"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Dirección: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtDireccion"
                        android:layout_width="279dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:ems="10"
                        android:hint="direccion"
                        android:inputType="textPersonName"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/telefono"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Telefono: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtTelefono"
                        android:layout_width="279dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:ems="10"
                        android:hint="+503 0000-0000"
                        android:inputType="textPersonName"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/DUI"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="DUI: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtDUI"
                        android:layout_width="279dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:ems="10"
                        android:hint="00000000-0"
                        android:inputType="textPersonName"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Descripcion: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtDescripcion"
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:ems="10"
                        android:hint="Descripcion"
                        android:inputType="textPersonName"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nacionalidad"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:text="Nacionalidad: "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerNacionalidad"
                        android:layout_width="261dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="348dp"
                        android:background="@drawable/bordett"
                        android:paddingStart="5dp"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgFotoPerfil"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="125dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/iconousuario"
                        android:tag="0" />

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAgregarPersona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="100dp"
                        android:paddingTop="25dp"
                        android:paddingEnd="100dp"
                        android:paddingBottom="25dp"
                        android:text="Registrarse"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="75dp"/>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
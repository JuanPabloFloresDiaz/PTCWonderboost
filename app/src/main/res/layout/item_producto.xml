<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/card_background">

    <ImageView
        android:id="@+id/imgFotoProducto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bordett"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/txtNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="producto"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/PrecioCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="$0.00"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/EstadoProductoCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="disponible"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginStart="8dp">



        <TextView
            android:id="@+id/TipoPrecioCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="fijo"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/CantidadCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="1"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/Vendedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="root"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>